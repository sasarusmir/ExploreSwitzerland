<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/symbols_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/symbols_bg_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/symbols_img_a" />

            <TextView
                android:id="@+id/action_bar_shadow_symbol"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/a_shadow" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/symbolstextlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/symbols_title_swisscross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/symbols_title_swisscross"
                android:textColor="@color/RedExplore"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/symbols_text_swisscross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/symbols_text_swisscross"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/symbols_title_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/symbols_title_flag"
                android:textColor="@color/RedExplore"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symbols_text_flag"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/symbols_seperator_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/RedExplore" />

            <ImageView
                android:id="@+id/symbols_photo_alphorn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/symbols_img_b" />

            <TextView
                android:id="@+id/symbols_title_alphorn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/symbols_title_alphorn"
                android:textColor="@color/RedExplore"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/symbols_text_alphorn"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/symbols_seperator_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/RedExplore" />

            <ImageView
                android:id="@+id/symbols_photo_saintbernarddog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/symbols_img_c" />

            <TextView
                android:id="@+id/symbols_title_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/symbols_title_dog"
                android:textColor="@color/RedExplore"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/symbols_text_dog"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/symbols_seperator_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/RedExplore" />

            <ImageView
                android:id="@+id/symbols_photo_chocolate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/symbols_img_d" />

            <TextView
                android:id="@+id/symbols_title_chocolate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/symbols_title_chocolate"
                android:textColor="@color/RedExplore"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/symbols_text_chocolate"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/symbols_seperator_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/RedExplore" />

            <ImageView
                android:id="@+id/symbols_photo_absinth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/symbols_img_e" />

            <TextView
                android:id="@+id/symbols_title_absinth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/symbols_title_absinth"
                android:textColor="@color/RedExplore"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/symbols_text_absinth"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/symbols_seperator_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/RedExplore" />

            <ImageView
                android:id="@+id/symbols_photo_watchmaking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/symbols_img_f" />

            <TextView
                android:id="@+id/symbols_title_watchmaking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/symbols_title_watchmaking"
                android:textColor="@color/RedExplore"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/symbols_text_watchmaking"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/symbols_seperator_6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/RedExplore" />

            <ImageView
                android:id="@+id/symbols_photo_swissarmyknife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/symbols_img_g" />

            <TextView
                android:id="@+id/symbols_title_knife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/symbols_title_knife"
                android:textColor="@color/RedExplore"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/symbols_text_knife"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>