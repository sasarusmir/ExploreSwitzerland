<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fragment_container_explore_luzern"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/custom_navigation_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_bg_xml"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/custom_nav_button_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg_xml"
            android:clickable="true"
            android:drawableTop="@drawable/explore_history_icn_xml"
            android:gravity="center"
            android:lines="2"
            android:onClick="openActivity"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:text="History &amp; Culture"
            android:textColor="@color/bottom_bar_text"
            android:textSize="13sp" />

        <!-- <Button -->
        <!-- android:id="@+id/custom_nav_button_history" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="match_parent" -->
        <!-- android:layout_weight="1" -->
        <!-- android:background="@drawable/explore_landmarks_icn_xml" -->
        <!-- android:onClick="openActivity" /> -->

        <TextView
            android:id="@+id/custom_nav_button_landmarks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg_xml"
            android:clickable="true"
            android:drawableTop="@drawable/explore_landmarks_icn_xml"
            android:gravity="center"
            android:lines="2"
            android:onClick="openActivity"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:text="Natural Landmarks"
            android:textColor="@color/bottom_bar_text"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/custom_nav_button_hiking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg_xml"
            android:clickable="true"
            android:drawableTop="@drawable/explore_hiking_icn_xml"
            android:gravity="center"
            android:lines="2"
            android:onClick="openActivity"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:text="Hiking Spots"
            android:textColor="@color/bottom_bar_text"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/custom_nav_button_stay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg_xml"
            android:clickable="true"
            android:drawableTop="@drawable/explore_stay_icn_xml"
            android:gravity="center"
            android:lines="2"
            android:onClick="openActivity"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:text="Where to stay?"
            android:textColor="@color/bottom_bar_text"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>