<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/explore_lu_history_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/explore_bg_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/luzerne_main_img" />

            <TextView
                android:id="@+id/action_bar_shadow_about"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/a_shadow" />

            <Button
                android:id="@+id/explore_luzern_btn_basic_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/explore_bg_image"
                android:layout_alignParentRight="true"
                android:background="@drawable/explore_luzern_btn_basic_bg_xml"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:onClick="openDefault" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >
            
            
            <LinearLayout
                android:id="@+id/explore_luzern_layout_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/explore_history_title"
                    android:textColor="@color/RedExplore"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/explore_luzern_btn_history"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/details_btn_inactive" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_container_explore_luzern_history_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/explore_luzern_seperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/RedExplore" />
            
            <LinearLayout
                android:id="@+id/explore_luzern_layout_culturelandmarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/explore_culture_title"
                    android:textColor="@color/RedExplore"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/explore_luzern_btn_culturelandmarks"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/details_btn_inactive" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_container_explore_luzern_history_culturelandmarks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            
        </LinearLayout>
    </LinearLayout>

</ScrollView>