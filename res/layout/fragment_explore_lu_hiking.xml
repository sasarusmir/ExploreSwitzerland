<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/luzern_hiking_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/explore_bg_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/luzerne_main_img" />

            <TextView
                android:id="@+id/action_bar_shadow_about"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/a_shadow" />

            <Button
                android:id="@+id/explore_luzern_btn_basic_hiking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/explore_bg_image"
                android:layout_alignParentRight="true"
                android:background="@drawable/explore_luzern_btn_basic_bg_xml"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:onClick="openDefault" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/luzern_hikingspots_map" />

            <ImageView
                android:id="@+id/luzern_hiking_mountpilatushi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/luzern_hikingspots_img_a" />

            <TextView
                android:id="@+id/explore_luzern_title_pilatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/explore_luzern_title_pilatus"
                android:textColor="@color/RedExplore"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/explore_luzern_text_pilatus"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/explore_luzern_hiking_seperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/RedExplore" />

            <ImageView
                android:id="@+id/luzern_hiking_mountrigi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/luzern_hikingspots_img_b" />

            <TextView
                android:id="@+id/explore_luzern_title_rigi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/explore_luzern_title_rigi"
                android:textColor="@color/RedExplore"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/explore_luzern_text_rigi"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>