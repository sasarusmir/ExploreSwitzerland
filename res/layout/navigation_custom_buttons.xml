<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_navigation_buttons"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/custom_nav_button_history"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/explore_history_icn_xml" />

    <Button
        android:id="@+id/custom_nav_button_landmarks"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/explore_landmarks_icn_xml" />

    <Button
        android:id="@+id/custom_nav_button_hiking"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/explore_hiking_icn_xml" />

    <Button
        android:id="@+id/custom_nav_button_stay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/explore_stay_icn_xml" />

</LinearLayout>