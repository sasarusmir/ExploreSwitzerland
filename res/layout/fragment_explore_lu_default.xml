<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >
    
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >
			<ImageView android:id="@+id/explore_bg_image"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:adjustViewBounds="true"
			    android:src="@drawable/luzerne_main_img"/>
            <TextView
                android:id="@+id/action_bar_shadow_about"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/a_shadow" />

            <Button
                android:id="@+id/explore_luzern_btn_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_alignBottom="@+id/explore_bg_image"
                android:layout_alignParentRight="true"
                android:background="@drawable/explore_luzern_btn_basic_bg_xml" />

        </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:padding="10dp">
     
  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
             >
             <ImageView android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/luzern_coa"
                 android:layout_marginRight="5dp"
                 android:adjustViewBounds="true"/>
             <ImageView android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/luzern_map"
                 android:layout_marginLeft="5dp"
                 android:adjustViewBounds="true"/>
    </LinearLayout>
<TextView
                android:id="@+id/explore_luzern_text_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/explore_luzern_text_default"
                android:textColor="@color/gray" 
                android:layout_marginTop="10dp"/>
  
</LinearLayout>
</LinearLayout>
</ScrollView>